if (hexo-config('back2top.enable')) {
  .back-to-top {
    font-size: $b2t-font-size;
    position: fixed;
    if (not hexo-config('sidebar.toggle')) {
       right: 30px;
    }
    letter-spacing: .4px;
    cursor: pointer;
    text-align: center;
    z-index: 999;

    #scrollpercent {
      color: $b2t-color;
      background: $b2t-bg-color;
      width: 1.7rem;
      height: 1.7rem;
      line-height: 1.8rem;
      display: block;
      vertical-align: middle;
      border-radius: 50%;
    }

    if (not hexo-config('back2top.scrollpercent')) {
      span {
        display: none;
      }
    }

    if (hexo-config('back2top.sidebar')) {
      margin: 20px - $sidebar-offset -10px -20px;
      opacity: 0;
      transition: opacity $transition-ease;

      &.back-to-top-on {
        cursor: pointer;
        opacity: $b2t-opacity;

        &:hover {
          opacity: $b2t-opacity-hover;
        }
      }
    } else {
      bottom: $b2t-position-bottom;
      box-sizing: border-box;
      color: $b2t-color;
      padding: 0 6px;
      transition: bottom $transition-ease;
      sidebar-toggle();

      if (not hexo-config('back2top.scrollpercent')) {
        width: 24px;
      }

      &:hover {
        color: $sidebar-highlight;
      }

      &.back-to-top-on {
        bottom: $b2t-position-bottom-on;
      }
    }
  }
}
